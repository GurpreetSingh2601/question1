  <body>
    <div class="container">
      <form action="/createcard" method="POST"> 
        <div class="form-group">
          <h3 class="text-center">Create your DevCard</h3>
          <input type="text" id="fullname" name="fullname" placeholder="Your full name">
        </div>
        <div class="form-group"></div>
          <textarea id="aboutme" name="About Me" placeholder="About me" rows ="4" cols = "30"></textarea>
          <input type="text" id="Github URL" name="Github URL" placeholder="Github URL">
          <input type="text" id="Twitter URL" name="Twitter URL" placeholder="Twitter URL">
          <input type="text" id="Favbooks" name="Favbooks" placeholder="Favourite books (Seperated by comma)"">
          <input type="text" id="Favartist" name="Favartist" placeholder="Favourite artists (Seperated by comma)">
        </div>
        <button type="submit"> Create site </button>
      </form>
    </div>
  </body>
</html>
